apiVersion: apps/v1
kind: Deployment
metadata:
  name: myapp-deployment
spec:
  replicas: 1
  strategy:
    type: RollingUpdate
  selector:
    matchLabels:
      app: myapp
  template:
    metadata:
      labels:
        app: myapp
    spec:
      containers:
      - name: flaskapp
        image: abhiramthejas/flask_app:{{ version }}
        imagePullPolicy: Always
        ports:
        - containerPort: 80
